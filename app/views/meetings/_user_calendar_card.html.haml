.card{id: "calendar_card-#{meeting.start_time.to_i}"}
  .card-body
    .card-title
      = meeting.start_time.strftime("%H:%M")

    - if meeting.open?
      = button_to "Book this time", book_meeting_path(meeting, user_id: user), class: "btn btn-outline-success btn-sm btn-block"

    - if meeting.booked?
      - if meeting.user == user
        = link_to "Booked", "javascript:void(0);", class: "btn btn-success btn-sm btn-block disabled"
      - else
        = link_to "Not available", "javascript:void(0);", class: "btn btn-secondary btn-sm btn-block disabled"
