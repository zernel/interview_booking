%table.table
  %thead
    %tr
      %th Name
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td
          = user.name
          = link_to "[Act As]", user_calendar_path(user), target: "_blank"
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, "data-turbo-method": "delete", 'data-turbo-confirm':"Are you sure?"

%br

= link_to 'New User', new_user_path
